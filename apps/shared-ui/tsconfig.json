{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "paths": {
            "$lib/*": [
                "./src/lib/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.svelte"
    ],
    "exclude": [
        "node_modules"
    ]
}